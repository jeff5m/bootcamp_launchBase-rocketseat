{% extends 'layout.njk' %}

{% block content %}

  <form class="card" method="POST" action="/teachers" id="teacherform">
    <section class="image" style="background: url(https://source.unsplash.com/collection/517198/500x500) no-repeat center center/cover"></section>

    <section class="details">

      <h3>Novo Professor</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input type="url" name="avatar_url" placeholder="htts://">
        </div>
      </div>

      <div class="item">
        <div>Nome Completo</div>
        <div>
          <input type="text" name="name" placeholder="Seu nome">
        </div>
      </div>

      <div class="item">
        <div>Data de Nascimento</div>
        <div>
          <input type="date" name="birth">
        </div>
      </div>

      <div class="item">
        <div>Grau de Escolaridade</div>
        <div>
          <select name="degree" form="teacherform">
            <option value="" selected="true">Selecione sua formação</option>
            <option value="high_school">Ensino Médio Completo</option>
            <option value="university">Ensino Superior Completo</option>
            <option value="master">Mestrado</option>
            <option value="doctorate">Doutorado</option>
          </select>
        </div>
      </div>

      <div class="item">
        <div>Formato de Aula</div>
        <div>
          <span><input type="radio" name="class_type" value="elearning" checked>À distância</span>
          <span><input type="radio" name="class_type" value="presential">Presencial</span>
        </div>
      </div>

      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="lectures" placeholder="Separe as matérias por vírgula">
        </div>
      </div>

    <button type="submit">Salvar</button>

    </section>
  </form>

{% endblock content %}  