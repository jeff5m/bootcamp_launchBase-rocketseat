{% extends 'layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="../../style.css">
  <title>{{item.title}}</title>
{% endblock %}

{% block content %}

  <main class="recipe">
    <img src="{{item.image}}" alt="Imagem de {{item.title}}">

    <h1>{{item.title}}</h1>
    <p>por
      {{item.author}}</p>

    <h2>Ingredientes</h2>
    <button>Esconder</button>
    <ul class="hideable">
      {% for ingredientLine in item.ingredients %}
        <li>{{ingredientLine}}</li>
      {% endfor %}
    </ul>

    <h2>Modo de preparo</h2>
    <button>Esconder</button>
    <div class="hideable">
      {% for preparationLine in item.preparation %}
        <p>{{preparationLine}}</p>
      {% endfor %}
    </div>

    <h2>Informações adicionais</h2>
    <button>Esconder</button>
    <p class="hideable">{{item.information}}</p>

  </main>

  <script src="/scripts.js"></script>

{% endblock %}}