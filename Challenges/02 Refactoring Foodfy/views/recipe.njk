{% extends 'layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="../../style.css">
  <title>{{item.title}}</title>
{% endblock %}

{% block content %}

  <img src="{{item.image}}" alt="Imagem de {{item.title}}">

  <h1>{{item.title}}</h1>
  <p>{{item.author}}</p>

  <h2>Ingredientes</h2><button>Esconder</button>
  <p>{{item.ingredients}}</p>

  <h2>Modo de preparo</h2><button>Esconder</button>
  <p>{{item.preparation}}</p>

  <h2>Informações adicionais</h2><button>Esconder</button>
  <p>{{item.information}}</p>

  <script src="/scripts.js"></script>

{% endblock %}}